cmake_minimum_required(VERSION 3.14...3.22)

project(@APP_NAME@ LANGUAGES CXX)

# ---- Dependencies ----

include(../tooling/CPM.cmake)

CPMAddPackage(NAME @INTERNAL_LIB_NAME@ SOURCE_DIR ${CMAKE_CURRENT_LIST_DIR}/..)

# ---- Create standalone executable ----

file(GLOB sources CONFIGURE_DEPENDS ${CMAKE_CURRENT_SOURCE_DIR}/src/*.cc)

add_executable(${PROJECT_NAME} ${sources})

set_target_properties(${PROJECT_NAME} PROPERTIES CXX_STANDARD @APP_CXX_STANDARD@ OUTPUT_NAME "out")

target_link_libraries(${PROJECT_NAME} @INTERNAL_LIB_NAME@)